---
// Componente Solucion.astro - Solución de Comunicación Empresarial
const mujerAlTel = "/src/assets/mujer_al_tel.svg";
const vector = "/src/assets/vector_izq-der.svg"; 

---

<section class="relative py-10 sm:py-16 md:py-24 overflow-hidden">
  <!-- Fondo con degradado naranja en la esquina superior izquierda -->



  <div class="container mx-auto px-4 sm:px-6">
    <div class="flex flex-col lg:flex-row items-center gap-8 sm:gap-12">
      <!-- Contenido de texto - lado izquierdo -->
      <div class="w-full lg:w-1/2 mb-10 sm:mb-12 lg:mb-0 lg:pr-8 xl:pr-12 order-2 lg:order-1">

        <img 
        src={vector} 
        style="height: 100%; margin-top: -1rem;" 
        alt="Linea de separación de texto" 
        class="w-auto min-h-[100px] sm:min-h-[50px] md:min-h-[50px] lg:min-h-[65px] xl:min-h-[75px] object-contain "
      />

        <h2 class="text-[#002655] text-2xl sm:text-3xl md:text-4xl lg:text-6xl font-bold leading-tight mb-4 sm:mb-6 pb-8">
          Tu Solución de<br class="hidden xs:inline" /> Comunicación<br class="hidden xs:inline" /> Empresarial
        </h2>

        <div class="h-3 w-60 bg-gradient-to-r from-[#e55934] to-transparent mb-8"></div>
        
        <p class="text-gray-700 text-sm sm:text-base mb-8 sm:mb-10 max-w-6xl lg:text-2xl">
          Hablix está diseñado para modernizar la infraestructura de comunicación 
          de tu empresa, permitiéndote gestionar llamadas, mensajes y reuniones 
          virtuales desde cualquier dispositivo y ubicación.
        </p>
        
        <!-- Características en grid responsivo -->
        <div class="grid grid-cols-2 sm:grid-cols-2 gap-4 sm:gap-6 md:gap-8">
          <!-- Característica 1 -->
          <div class="text-center p-2 sm:p-3">
            <h3 class="text-[#002655] text-lg sm:text-xl md:text-3xl font-bold mb-1 sm:mb-2">Sobre 200<br class="hidden xs:inline" /> usuarios</h3>
            <p class="text-gray-600 text-xs sm:text-sm lg:text-2xl">Confiado por cientos de<br class="hidden xs:inline" /> empresas.</p>
          </div>
          
          <!-- Característica 2 -->
          <div class="text-center p-2 sm:p-3">
            <h3 class="text-[#002655] text-lg sm:text-xl md:text-3xl font-bold mb-1 sm:mb-2">Solución<br class="hidden xs:inline" /> escalable</h3>
            <p class="text-gray-600 text-xs sm:text-sm lg:text-2xl">Desde startups hasta grandes<br class="hidden xs:inline" /> corporaciones.</p>
          </div>
          
          <!-- Característica 3 -->
          <div class="text-center p-2 sm:p-3">
            <h3 class="text-[#002655] text-lg sm:text-xl md:text-3xl font-bold mb-1 sm:mb-2">100+<br class="hidden xs:inline" /> funciones</h3>
            <p class="text-gray-600 text-xs sm:text-sm lg:text-2xl">Integración total con tu flujo<br class="hidden xs:inline" /> de trabajo.</p>
          </div>
          
          <!-- Característica 4 -->
          <div class="text-center p-2 sm:p-3">
            <h3 class="text-[#002655] text-lg sm:text-xl md:text-3xl font-bold mb-1 sm:mb-2">Nube segura y<br class="hidden xs:inline" /> fiable</h3>
            <p class="text-gray-600 text-xs sm:text-sm lg:text-2xl">Con soporte 24/7.</p>
          </div>
        </div>
      </div>
      
      <!-- Imagen - lado derecho/arriba en móvil -->
      <div class="w-full sm:w-4/5 md:w-3/4 lg:w-3/5 mx-auto lg:mx-0 order-1 lg:order-2">
        <div class="relative h-full">
           
              <img 
                src={mujerAlTel} 
                style="height: 100%; margin-top: -1rem;" 
                alt="Mujer profesional usando teléfono en oficina" 
                class="w-auto min-h-[450px] sm:min-h-[550px] md:min-h-[600px] lg:min-h-[650px] xl:min-h-[700px] object-contain py-4"
              />
            
          
          <!-- Espaciador para mantener proporciones correctas - más alto -->
          <div class="aspect-w-3 aspect-h-8 sm:aspect-h-7 md:aspect-h-6 lg:aspect-h-7 xl:aspect-h-8 invisible"></div>
        </div>
      </div>
    </div>
  </div>
</section>